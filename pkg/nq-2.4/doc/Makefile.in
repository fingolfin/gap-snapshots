top_srcdir = @top_srcdir@
top_builddir = @top_builddir@
srcdir = @srcdir@
VPATH = @srcdir@
subdir = doc

GAP=@GAP_ROOT@/bin/gap.sh

gapdoc:
	@echo 'LoadPackage("gapdoc"); MakeGAPDocDoc( "./", "nqman", [ "../PackageInfo.g" ], "nq", "'"@GAP_ROOT@"'", "MathJax" );; CopyHTMLStyleFiles("./");' | $(GAP) -A -q -T

clean:
	@rm -f nqman.aux nqman.bbl nqman.blg nqman.idx nqman.ilg nqman.ind\
	   nqman.log nqman.pnr nqman.tex nqman.toc nqman.brf
	@rm -f *~
	@rm -f test/nqman.tst test/diffs

distclean: clean
	@rm -f manual.dvi manual.html manual.pdf manual.ps manual.six
	@rm -f chap*.html chap*.txt

.PRECIOUS: Makefile
Makefile: $(srcdir)/Makefile.in $(top_builddir)/config.status
	cd $(top_builddir) && $(SHELL) ./config.status $(subdir)/$@

.PHONY: gapdoc clean distclean
